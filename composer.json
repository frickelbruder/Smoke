{
  "name": "phmlabs/smoke",

  "minimum-stability": "dev",
  "prefer-stable": true,

  "require": {
    "php": ">= 5.4.0",
    "symfony/yaml": "~2.2",
    "symfony/console": "~2.2",
    "symfony/dom-crawler": "~2.2",
    "phmlabs/init": "1.0.1",
    "egeloen/http-adapter": "dev-timings",
    "phmlabs/annovent": "1.0.0",
    "phmlabs/html": "1.0.3",
    "phmlabs/crawler": "dev-master"
  },
  "require-dev": {
    "fabpot/php-cs-fixer": "@stable"
  },
  "autoload": {
    "psr-4": {
      "whm\\Smoke\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "whm\\Smoke\\Test\\": "test/unit"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "git@github.com:digitalkaoz/ivory-http-adapter.git"
    }
  ],
  "scripts" : {
     "cs" : "vendor/bin/php-cs-fixer fix $1",
     "test" : "vendor/bin/phpunit $1"
  },
  "bin": [
    "bin/Smoke.php"
  ]
}
